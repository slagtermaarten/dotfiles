[user]
	name = Maarten Slagter
	email = slagter.maarten@gmail.com
[alias]
  a = add
  au = add -u
  br = branch
  ci = commit
  cm = commit -m
  co = checkout
  cob = checkout -b
  df = diff
  st = status
  rbi = rebase -i
  rba = rebase --abort
  rbc = rebase --continue
  fix = commit --amend
  fixa = commit --all --amend
  ca = commit -a
  cam = commit -a -m
  lg = log -p
  lgc = log --graph --date=local --color
  rlg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ps = show --color --pretty=format:%b
  ldiff = difftool -t latex
  po = push origin
  pof = push -f origin
  s = status
[pager]
  status = true
[core]
	editor = vim
	whitespace = trailing-space,space-before-tab
[difftool.latex]
  cmd = git-latexdiff "$LOCAL" "$REMOTE"
[difftool]
  tool = vimdiff
  prompt = false
[push]
	default = tracking
[color]
	ui = auto
[diff]
	renames = copies
[branch]
	autosetupmerge = true
[rerere]
	enabled = true
[merge]
	stat = true
  tool = vimdiff
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
